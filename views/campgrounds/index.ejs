<% include ../partials/header %>


<header class="card default-primary-color ">
    <div class="card-content white-text">
        <h1 class="card-title">This is the Campgrounds Page</h1>
        <p>View our hand-picked campgrounds from all over the world!</p>
    </div>
    <div class="card-action">
        <a href="/campgrounds/new">Create a new campground!</a>
    </div>
</header>

<div class="row" style="display: flex; flex-wrap: wrap;">
<% campgrounds.forEach(function (campground) { %>
        <div class="col s6 m4">
            <div class="card">
                <div class="card-image">
                    <img src="<%= campground.image %>">
                    <span class="card-title">
                        <%= campground.name %>
                    </span>
                </div>
                <div class="card-content">
                    <p>
                        <%= campground.description.substring(0, 100) %>...
                    </p>
                </div>
                <div class="card-action">
                    <a href="/campgrounds/<%= campground._id %>">More Info</a>
                </div>
            </div>
        </div>
<% }) %>
</div>

<% include ../partials/footer %>